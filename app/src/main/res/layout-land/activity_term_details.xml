<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.TermDetails">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:isScrollContainer="false"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Term Title:"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTerm"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:text="Term Start Date"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTermStart"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:text="Term End Date"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTermEnd"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:ems="10"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="179dp"
                android:layout_height="52dp"
                android:layout_marginBottom="24dp"
                android:onClick="deleteTerm"
                android:text="DELETE TERM" />

            <Button
                android:id="@+id/viewCoursesButton"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:onClick="viewCourses"
                android:text="View Courses" />

            <Button
                android:id="@+id/button"
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:onClick="onSave"
                android:text="SAVE" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>